%h1 User Info

%dl
  %dt Email
  %dd= @current_user.email

=form_for @current_user, as: 'user' do |f|
  .field.form-group
    = f.text_field :kijiji_user, value: @current_user.kijiji_user, class: "form-control", placeholder: "Kijiji user" 
  
  .field.form-group
    = f.text_field :kijiji_password, value: @current_user.kijiji_password, class: "form-control", placeholder: "Kijiji password" 

  .field.form-group
    = f.text_field :password, class: "form-control", placeholder: "New Password" 
  = f.submit class: "btn btn-primary"
